@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Edit Comment</h4>
                <div class="bs-example" data-example-id="simple-table">
                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>User</label>
                        <input type="text" class="form-control" asp-for="NameSurname" />
                        <br>
                        <label>Comment</label>
                        <textarea asp-for="CommentDetail" class="form-control" rows="3"></textarea>
                        <br>
                        <label>User Image</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br>
                        <label>EMail</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br>
                        <label>Rating</label>
                        <input type="number" class="form-control" asp-for="Rating" />
                        <br>
                        <label>Date</label>
                        <input type="date" class="form-control" asp-for="CreatedDate" />
                        <br>
                        <label>Status</label>
                        <input type="text" class="form-control" asp-for="Status" />
                        <br>


                        <button type="submit" class="btn btn-success">Edit</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
