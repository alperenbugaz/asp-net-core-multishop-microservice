@model List<ResultUserDto>
@{  
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Brand List</h4>
                <div class="bs-example" data-example-id="simple-table">
                    <table class="table">

                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name Surname</th>
                                <th>UserName</th>
                                <th>EMail</th>
                                <th>Address Detail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.name @item.surname</td>
                                    <td>@item.userName</td>
                                    <td>@item.email</td>
                                    <td><a href="/Admin/User/UserAddressInfo/@item.id" class="btn btn-warning">Address Detail</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>
